@page
@model VendingMachineRazerUI.Pages.ItemInventoryModel
@{
	ViewData["Title"] = "ItemInventory";
}

<h1>Item inventory</h1>

<div class="row">
	<div class="col-6">
		<table class="table table-striped">
			<thead class="thead-dark">
				<tr>Slot</tr>
				<tr>Name</tr>
				<tr>Price</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.Items)
				{
					<tr>
						<td>@item.Slot</td>
						<td>@item.Name</td>
						<td>@item.Price</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
 	<div class="col-6">
		<form method="post">
			<div class="form-group">
				<label for="selectedItem">Select item</label>
				<select id="selectedItem" asp-for="@Model.SelectedItem" asp-items="@Model.ItemOptions"></select>
			</div>
			<div class="form-group">
				<label for="selectedSlot">Select slot</label>
				<select id="selectedSlot" asp-for="@Model.SelectedSlot" asp-items="@Model.SlotOptions"></select>
			</div>
			<div class="form-group">
				<label for="selectedPrice">Enter price</label>
				<input id="selectedPrice" asp-for="@Model.SelectedPrice" asp-items="@Model.SelectedPrice"></input>
			</div>
			<button type="submit" class="btn btn-primary">Add [item] to inventory</button>
		</form>
		</br>
	</div> 
</div>